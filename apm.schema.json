{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "format": "regex",
            "pattern": "^[a-zA-Z0-9-_]+$",
            "description": "The name of the package"
        },
        "vendor": {
            "type": "string",
            "format": "regex",
            "pattern": "^@[a-zA-Z0-9]+$",
            "description": "The vendor of the package",
            "default": "@apm"
        },
        "description": {
            "type": "string",
            "description": "The description of the package"
        },
        "version": {
            "type": "string",
            "pattern": "^[0-9]+.[0-9]+.[0-9]+$",
            "description": "The version of the package",
            "default": "1.0.0"
        },
        "tags": {
            "type": "array",
            "description": "The tags of the package (max 5)",
            "items": {
                "type": "string"
            },
            "default": []
        },
        "repository": {
            "type": "string",
            "format": "uri",
            "description": "The repository url of the package"
        },
        "license": {
            "type": "string",
            "description": "The license of the package",
            "default": "MIT"
        },
        "dependencies": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "version": {
                    "type": "string",
                    "pattern": "^[0-9]+.[0-9]+.[0-9]+$"
                }
            }
        },
        "warnings": {
            "type": "object",
            "properties": {
                "modifiesGlobalState": {
                    "type": "boolean"
                },
                "installMessage": {
                    "type": "string"
                }
            },
            "required": [
                "modifiesGlobalState",
                "installMessage"
            ]
        }
    },
    "required": [
        "name",
        "vendor",
        "description",
        "version",
        "tags",
        "repository",
        "license"
    ]
}