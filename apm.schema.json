{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "format": "regex",
            "pattern": "^[a-zA-Z0-9-_]+$"
        },
        "vendor": {
            "type": "string",
            "format": "regex",
            "pattern": "^@[a-zA-Z0-9]+$"
        },
        "description": {
            "type": "string"
        },
        "version": {
            "type": "string"
        },
        "tags": {
            "type": "array",
            "items": [
                {
                    "type": "string"
                },
                {
                    "type": "string"
                }
            ]
        },
        "repository": {
            "type": "string",
            "format": "uri"
        },
        "license": {
            "type": "string"
        },
        "dependencies": {
            "type": "object"
        },
        "warnings": {
            "type": "object",
            "properties": {
                "modifiesGlobalState": {
                    "type": "boolean"
                },
                "installMessage": {
                    "type": "string"
                }
            },
            "required": [
                "modifiesGlobalState",
                "installMessage"
            ]
        }
    },
    "required": [
        "name",
        "vendor",
        "description",
        "version",
        "tags",
        "repository",
        "license"
    ]
}